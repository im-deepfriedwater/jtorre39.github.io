{
  "name": "2d-scene",
  "private": true,
  "version": "0.0.0",
  "description": "2D animation from the ground up",
  "main": "",
  "scripts": {
    "test": "eslint *.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^3.14.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jquery": true,
      "node": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "KeyframeTweener": true,
      "SampleSpriteLibrary": true
    },
    "rules": {
      "curly": 2,
      "eqeqeq": 2,
      "no-eval": 2,
      "no-global-assign": 2,
      "no-lone-blocks": 2,
      "no-multi-spaces": 2,
      "no-return-assign": 2,
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "camelcase": [
        2,
        {
          "properties": "never"
        }
      ],
      "func-style": [
        2,
        "expression"
      ],
      "comma-spacing": 2,
      "computed-property-spacing": 2,
      "func-call-spacing": 2,
      "indent": 2,
      "key-spacing": 2,
      "keyword-spacing": 2,
      "semi-spacing": 2,
      "space-in-parens": 2,
      "space-infix-ops": 2,
      "space-unary-ops": 2,
      "spaced-comment": 2,
      "lines-around-comment": 2,
      "max-len": [
        2,
        128
      ],
      "new-parens": 2,
      "no-tabs": 2,
      "operator-linebreak": [
        2,
        "after"
      ],
      "no-console": 1,
      "semi": [
        2,
        "always"
      ]
    }
  }
}
